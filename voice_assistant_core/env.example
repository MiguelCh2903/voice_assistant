#!/bin/bash

# Ejemplo de archivo .env para VAPI Voice Assistant
# Copia este archivo a ~/.env y completa con tus valores reales

# ==============================================================================
# VAPI Configuration
# ==============================================================================
# ⚠️ IMPORTANTE: Usa la PUBLIC KEY, NO la PRIVATE KEY
# - Public Key: Empieza con "pk_..." - úsala para iniciar llamadas desde cliente
# - Private Key: Empieza con "sk_..." - NO la uses aquí (solo para servidor)
#
# Obtén tu Public Key en: https://dashboard.vapi.ai/settings/api-keys
export VAPI_API_KEY="pk_xxxxxxxxxx"

# ID del asistente VAPI que creaste
# Obtén el ID en: https://dashboard.vapi.ai/assistants
export VAPI_ASSISTANT_ID="xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# URL de la API de VAPI (generalmente no necesitas cambiar esto)
export VAPI_API_URL="https://api.vapi.ai"

# Auto-iniciar llamada al lanzar el nodo (true/false)
export VAPI_AUTO_START="true"

# ==============================================================================
# ESPHome Device Configuration
# ==============================================================================
# IP del dispositivo ESPHome
# Puedes encontrarla en tu router o en Home Assistant
export ESPHOME_HOST="192.168.1.71"

# Puerto de la API de ESPHome (por defecto 6053)
export ESPHOME_PORT="6053"

# Contraseña de la API (si la configuraste en ESPHome)
# Déjalo vacío si no usas contraseña
export ESPHOME_PASSWORD=""

# Encryption key de ESPHome
# La encuentras en tu archivo .yaml de ESPHome bajo "api: encryption: key:"
export ESPHOME_ENCRYPTION_KEY="tu-encryption-key-base64-aqui"

# ==============================================================================
# Debugging
# ==============================================================================
# Nivel de log (DEBUG, INFO, WARNING, ERROR)
export LOG_LEVEL="INFO"

# ==============================================================================
# Instrucciones de Uso
# ==============================================================================
# 1. Copia este archivo:
#    cp env.example ~/.env
#
# 2. Edita ~/.env y completa tus valores reales:
#    nano ~/.env
#
# 3. Carga las variables:
#    source ~/.env
#
# 4. Verifica que se cargaron:
#    echo $VAPI_API_KEY
#    echo $VAPI_ASSISTANT_ID
#
# 5. Lanza el nodo:
#    ros2 launch voice_assistant_core vapi_voice_assistant.launch.py
